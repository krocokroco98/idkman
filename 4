-- [Debug Script]
-- Purpose: Test if WindUI can be loaded and a basic window can be created.

pcall(function()
    print("Attempting to download WindUI...")
    local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()
    
    if not WindUI then
        warn("CRITICAL ERROR: WindUI library failed to load.")
        warn("This could be due to your executor, an internet issue, or a broken link.")
        return
    end

    print("SUCCESS: WindUI loaded correctly!")

    local TestWindow = WindUI:CreateWindow({
        Title = "UI Test",
        Size = UDim2.fromOffset(300, 200)
    })

    if TestWindow then
        print("SUCCESS: Test window was created.")
        TestWindow:Tab({Title = "Success"}):Paragraph({Title = "If you see this window, the UI library is working."})
    else
        warn("ERROR: UI loaded, but the window could not be created.")
    end
end)
